{
  "compilerOptions": {
    "target": "ES2015",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest"],
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
